<?xml version="1.0" encoding="UTF-8"?>
<Configuration hierarchy="au" description="Australia"
               xmlns="https://focus_shift.de/jollyday/xml/ns/holiday"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="https://focus_shift.de/jollyday/xml/ns/holiday https://focus_shift.de/jollyday/xml/ns/holiday/Holiday.xsd">
  <Holidays>
    <!-- New Year's Day -->
    <Fixed month="JANUARY" day="1" descriptionPropertiesKey="NEW_YEAR"/>
    <!-- Australia Day -->
    <Fixed month="JANUARY" day="26" descriptionPropertiesKey="NATIONAL_DAY"/>
    <!-- Good Friday -->
    <Fixed month="APRIL" day="2" descriptionPropertiesKey="christian.GOOD_FRIDAY"/>
    <!-- Easter Saturday -->
    <Fixed month="APRIL" day="3" descriptionPropertiesKey="christian.EASTER_SATURDAY"/>
    <!-- Easter Sunday -->
    <Fixed month="APRIL" day="4" descriptionPropertiesKey="christian.EASTER"/>
    <!-- Easter Monday -->
    <Fixed month="APRIL" day="5" descriptionPropertiesKey="christian.EASTER_MONDAY"/>
    <!-- ANZAC Day -->
    <Fixed month="APRIL" day="25" descriptionPropertiesKey="ANZAC"/>
    <!-- Christmas Day -->
    <Fixed month="DECEMBER" day="25" descriptionPropertiesKey="CHRISTMAS"/>
    <!-- Additional Christmas Day -->
    <Fixed month="DECEMBER" day="27" descriptionPropertiesKey="CHRISTMAS"/>
    <!-- Boxing Day -->
    <Fixed month="DECEMBER" day="26" descriptionPropertiesKey="BOXING_DAY"/>
    <!-- Additional Boxing Day -->
    <Fixed month="DECEMBER" day="28" descriptionPropertiesKey="BOXING_DAY"/>
  </Holidays>
  <SubConfigurations hierarchy="act" description="Australian Capital Territory">
    <Holidays>
      <!-- Anzac Day -->
      <Fixed month="APRIL" day="26" descriptionPropertiesKey="ANZAC"/>
      <!-- Canberra Day -->
      <Fixed month="MARCH" day="8" descriptionPropertiesKey="CANBERRA_DAY"/>
      <!-- Queen's Birthday -->
      <Fixed month="JUNE" day="14" descriptionPropertiesKey="QUEENS_BIRTHDAY"/>
      <!-- Labour Day -->
      <Fixed month="OCTOBER" day="4" descriptionPropertiesKey="LABOUR_DAY"/>
      <!-- Reconciliation Day -->
      <Fixed month="MAY" day="31" descriptionPropertiesKey="RECONCILIATION"/>
    </Holidays>
  </SubConfigurations>
  <SubConfigurations hierarchy="nsw" description="New South Wales">
    <Holidays>
      <!-- Queen's Birthday -->
      <Fixed month="JUNE" day="14" descriptionPropertiesKey="QUEENS_BIRTHDAY"/>
      <!-- Labour Day -->
      <Fixed month="OCTOBER" day="4" descriptionPropertiesKey="LABOUR_DAY"/>
      <!-- Bank -->
      <Fixed month="AUGUST" day="2" descriptionPropertiesKey="BANK_HOLIDAY"/>
    </Holidays>
  </SubConfigurations>
  <SubConfigurations hierarchy="nt" description="Nothern Territory">
    <Holidays>
      <!-- ANZAC Day -->
      <Fixed month="APRIL" day="26" descriptionPropertiesKey="ANZAC"/>
      <!-- May Day -->
      <Fixed month="MAY" day="3" descriptionPropertiesKey="MAY_DAY"/>
      <!-- Queen's Birthday -->
      <Fixed month="JUNE" day="14" descriptionPropertiesKey="QUEENS_BIRTHDAY"/>
      <!-- Picnic -->
      <Fixed month="AUGUST" day="2" descriptionPropertiesKey="PICNIC"/>
    </Holidays>
  </SubConfigurations>
  <SubConfigurations hierarchy="qld" description="Queensland">
    <Holidays>
      <!-- ANZAC Day -->
      <Fixed month="APRIL" day="26" descriptionPropertiesKey="ANZAC"/>
      <!-- Labour Day -->
      <Fixed month="MAY" day="3" descriptionPropertiesKey="LABOUR_DAY"/>
      <!-- Queen's Birthday -->
      <Fixed month="OCTOBER" day="4" descriptionPropertiesKey="QUEENS_BIRTHDAY"/>
    </Holidays>
    <SubConfigurations hierarchy="br" description="Brisbane Area">
      <Holidays>
        <!-- Ekka Day -->
        <Fixed month="AUGUST" day="11" descriptionPropertiesKey="EKKA"/>
      </Holidays>
    </SubConfigurations>
  </SubConfigurations>
  <SubConfigurations hierarchy="sa" description="South Australia">
    <Holidays>
      <!-- ANZAC Day -->
      <Fixed month="APRIL" day="26" descriptionPropertiesKey="ANZAC"/>
      <!-- Proclamation Day -->
      <Fixed month="DECEMBER" day="28" descriptionPropertiesKey="PROCLAMATION"/>
      <!-- Queen's Birthday -->
      <Fixed month="JUNE" day="14" descriptionPropertiesKey="QUEENS_BIRTHDAY"/>
      <!-- Labour Day -->
      <Fixed month="OCTOBER" day="4" descriptionPropertiesKey="LABOUR_DAY"/>
      <!-- Adelaide Cup -->
      <Fixed month="MARCH" day="8" descriptionPropertiesKey="ADELAIDE_CUP"/>
    </Holidays>
  </SubConfigurations>
  <SubConfigurations hierarchy="tas" description="Tasmania">
    <Holidays>
      <!-- Eight Hour Day -->
      <Fixed month="MARCH" day="8" descriptionPropertiesKey="EIGHT"/>
      <!-- Queen's Birthday -->
      <Fixed month="JUNE" day="14" descriptionPropertiesKey="QUEENS_BIRTHDAY"/>
      <!-- Easter Tuesday -->
      <Fixed month="APRIL" day="6" descriptionPropertiesKey="christian.EASTER_TUESDAY"/>
    </Holidays>
    <SubConfigurations hierarchy="ho" description="Hobart Area">
      <Holidays>
        <Fixed month="FEBRUARY" day="8" descriptionPropertiesKey="HOBART"/>
      </Holidays>
    </SubConfigurations>
    <SubConfigurations hierarchy="nh" description="Non-Hobart Area">
      <Holidays>
        <Fixed month="NOVEMBER" day="1" descriptionPropertiesKey="RECREATION"/>
      </Holidays>
    </SubConfigurations>
  </SubConfigurations>
  <SubConfigurations hierarchy="vic" description="Victoria">
    <Holidays>
      <!-- Labour Day -->
      <Fixed month="MARCH" day="8" descriptionPropertiesKey="LABOUR_DAY"/>
      <!-- Queen's Birthday -->
      <Fixed month="JUNE" day="14" descriptionPropertiesKey="QUEENS_BIRTHDAY"/>
      <!-- AFL Grand Final Friday -->
      <Fixed month="SEPTEMBER" day="24" descriptionPropertiesKey="AFL"/>
      <!-- Melbourne Cup -->
      <Fixed month="NOVEMBER" day="2" descriptionPropertiesKey="MELBOURNE_CUP"/>
    </Holidays>
  </SubConfigurations>
  <SubConfigurations hierarchy="wa" description="Western Australia">
    <Holidays>
      <!-- Anzac Day -->
      <Fixed month="APRIL" day="26" descriptionPropertiesKey="ANZAC"/>
      <!-- Western Australia Day -->
      <Fixed month="JUNE" day="7" descriptionPropertiesKey="WESTERN_AUSTRALIA"/>
      <!-- Queen's Birthday -->
      <Fixed month="SEPTEMBER" day="27" descriptionPropertiesKey="QUEENS_BIRTHDAY"/>
      <!-- Labour Day -->
      <Fixed month="MARCH" day="1" descriptionPropertiesKey="LABOUR_DAY"/>
    </Holidays>
  </SubConfigurations>
</Configuration>
