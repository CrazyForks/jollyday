<?xml version="1.0" encoding="UTF-8"?>
<Configuration hierarchy="nz" description="New Zealand"
               xmlns="http://www.focus_shift.de/jollyday/xml/ns/holiday"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://www.focus_shift.de/jollyday/xml/ns/holiday http://www.focus_shift.de/jollyday/xml/ns/holiday/Holiday.xsd">
  <Holidays>
    <!-- New Year's Day -->
    <Fixed month="JANUARY" day="1" descriptionPropertiesKey="NEW_YEAR"/>
    <!-- Day after New Year's Day -->
    <Fixed month="JANUARY" day="2" descriptionPropertiesKey="DAY_AFTER_NEW_YEAR"/>
    <!-- Waitangi Day -->
    <Fixed month="FEBRUARY" day="6" descriptionPropertiesKey="WAITANGI_DAY"/>
    <!-- Good Friday -->
    <Fixed month="MARCH" day="30"/>
    <!-- Easter Monday -->
    <Fixed month="APRIL" day="2"/>
    <!-- ANZAC Day -->
    <Fixed month="APRIL" day="25" descriptionPropertiesKey="ANZAC"/>
    <!-- Queen's Birthday -->
    <Fixed month="JUNE" day="4" descriptionPropertiesKey="QUEENS_BIRTHDAY"/>
    <!-- Labour Day -->
    <Fixed month="OCTOBER" day="22" descriptionPropertiesKey="LABOUR_DAY"/>
    <!-- Christmas Day -->
    <Fixed month="DECEMBER" day="25" descriptionPropertiesKey="CHRISTMAS"/>
    <!-- Boxing Day -->
    <Fixed month="DECEMBER" day="26" descriptionPropertiesKey="BOXING_DAY"/>
  </Holidays>
